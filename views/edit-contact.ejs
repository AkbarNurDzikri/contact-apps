<%- include('layouts/header') %>
<%- include('layouts/navbar') %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h3>Edit Contact</h3>
      <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger fw-bold" role="alert">
          <ul>
            <% errors.forEach(error => { %>
              <li><%= error.msg %></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
      <form action="/contact?_method=PUT" method="POST">
        <input type="hidden" name="_id" value="<%= contact._id %>">
        <input type="hidden" name="oldNama" value="<%= contact.oldNama ? contact.oldNama : contact.nama %>">
        <label for="nama" class="form-label">Nama</label>
        <input type="text" class="form-control mb-3" name="nama" value="<%= contact.nama %>" required>

        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control mb-3" name="email" value="<%= contact.email %>" required>

        <button class="btn btn-sm btn-primary">Update</button>
      </form>
    </div>
  </div>
</div>
<%- include('layouts/footer') %>